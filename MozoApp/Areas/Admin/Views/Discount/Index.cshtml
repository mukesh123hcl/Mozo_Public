@model IEnumerable<MozoModels.Models.Discount_Coupen>

@using MozoApp.Models
@using MozoApp.Code
@{
	ViewData["Title"] = "Discount Coupen Config";

}

<h1>Ccoupen Config</h1>
<div class="top-buffer"></div>
<div class="panel panel-primary">

	<div class="panel-body">
		<div class="btn-group">
			<a id="createEditCountryModal" asp-area="Admin" asp-action="AddCoupen" asp-controller="Discount" class="btn btn-primary">
				<i class="glyphicon glyphicon-plus"></i>  Add Coupen
			</a>
		</div>

		<div class="top-buffer"></div>
		<table class="table table-bordered table-striped table-condensed">
			<thead>
				<tr>
					<th>ID</th>
					<th>Coupen Code</th>
					<th>Coupen Type</th>
					<th>Discount %</th>
					<th>Duration(Days)</th>
					<th>Added Date</th>
					<th>Modified Date</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
				<tr>
					<td>@Html.DisplayFor(modelItem => item.Id)</td>
					<td>@Html.DisplayFor(modelItem => item.Coupen_Code)</td>
					<td>@Html.DisplayFor(modelItem => item.Coupen_Type)</td>
					<td>@Html.DisplayFor(modelItem => item.Discount)</td>
					<td>@Html.DisplayFor(modelItem => item.Duration)</td>
					<td>@Html.DisplayFor(modelItem => item.AddDateTime)</td>
					<td>@Html.DisplayFor(modelItem => item.ModifiedDatime)</td>
					<td>
						<a id="editCustomerModal" asp-area="Admin" asp-action="EditCoupen" asp-controller="Discount" asp-route-id="@item.Id"
						   class="btn btn-info">
							<i class="glyphicon glyphicon-pencil"></i>  Edit
						</a>
						<a id="deleteCustomerModal" asp-action="DeleteCoupen" asp-area="Admin" asp-controller="Discount" asp-route-id="@item.Id" class="btn btn-danger">
							<i class="glyphicon glyphicon-trash"></i>  Delete
						</a>
					</td>
				</tr>
				}
			</tbody>
		</table>
	</div>



</div>

@section scripts
{
	<script src="~/js/country-index.js" asp-append-version="true"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js">
	</script>
	<script src="bootstrap/js/bootstrap.min.js"></script>

	<script type="text/javascript">
		$(document).ready(function () {
			$("#btnShowModal").click(function () {
				$("#loginModal").modal('show');
			});

			$("#btnHideModal").click(function () {
				$("#loginModal").modal('hide');
			});
		});
	</script>
}
