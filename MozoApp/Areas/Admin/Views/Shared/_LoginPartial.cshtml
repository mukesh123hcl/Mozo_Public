@using Microsoft.AspNetCore.Identity

@inject SignInManager<MozoModels.Models.ApplicationUser> SignInManager
@inject UserManager<MozoModels.Models.ApplicationUser> UserManager

	<ul class="list-inline">
		@if (SignInManager.IsSignedIn(User))
		{
			<li class="list-inline-item">
				<a id="manage" class="text-uppercase text-color p-sm-2 py-2 px-0 d-inline-block" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
			</li>
			<li class="list-inline-item">
				<form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
					<button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
				</form>
			</li>
		}
		else
		{

			<li class="list-inline-item">
				<a class="text-uppercase text-color p-sm-2 py-2 px-0 d-inline-block" id="register" asp-area="Identity" asp-page="/Account/Register" asp-route-provider="Custmer">Register</a>
			</li>
			<li class="list-inline-item">
				<a class="text-uppercase text-color p-sm-2 py-2 px-0 d-inline-block" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
			</li>
		}
	</ul>
